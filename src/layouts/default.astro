        <header>
            <h1>{frontmatter.title}</h1>
            {frontmatter.description && <p class="description">{frontmatter.description}</p>}
            <hr />
        </header>
        <article lang={frontmatter.language ? frontmatter.language : "en-GB"}>
            <slot />
        </article>
    </body>
</html>